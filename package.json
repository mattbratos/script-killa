{
  "name": "script-killa",
  "displayName": "script-killa",
  "description": "Teleprompter for .fountain screenplay files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:fountain"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fountain",
        "aliases": ["Fountain", "fountain"],
        "extensions": [".fountain"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "script-killa.openTeleprompter",
        "title": "Open Teleprompter",
        "icon": "$(play)",
        "category": "Script Killa"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .fountain",
          "command": "script-killa.openTeleprompter",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Script Killa Teleprompter",
      "properties": {
        "script-killa.hiddenCharacters": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["MATT"],
          "description": "Character names to hide in the teleprompter view. Names are matched case-insensitively."
        },
        "script-killa.fontSize": {
          "type": "number",
          "default": 32,
          "minimum": 16,
          "maximum": 72,
          "description": "Default font size (px) for the teleprompter display."
        },
        "script-killa.fontFamily": {
          "type": "string",
          "default": "'SF Mono', 'Cascadia Code', 'JetBrains Mono', 'Fira Code', monospace",
          "enum": [
            "'SF Mono', 'Cascadia Code', 'JetBrains Mono', 'Fira Code', monospace",
            "'Inter', 'Segoe UI', system-ui, sans-serif",
            "'Georgia', 'Times New Roman', serif",
            "'Courier New', 'Courier', monospace",
            "monospace"
          ],
          "enumDescriptions": [
            "Mono (SF Mono / Cascadia Code / JetBrains Mono)",
            "Sans (Inter / Segoe UI / system)",
            "Serif (Georgia / Times New Roman)",
            "Courier New",
            "System Monospace"
          ],
          "description": "Default font family for the teleprompter display."
        },
        "script-killa.scrollSpeed": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "maximum": 100,
          "description": "Default auto-scroll speed (pixels per second)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
